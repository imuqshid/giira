<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivaccimage"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:src="@drawable/placethumb" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />


            <TextView
                android:id="@+id/tvaccname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accommodation Name"
                android:textColor="#166CED"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/tvaccdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D64530"
                android:text="Accommodation's description" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/tvaccaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D64530"
                android:text="Accommodation's Address" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />


            <TextView
                android:id="@+id/tvaccwebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#166CED"
                android:text="Website"
                android:layout_weight="1"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/tvaccphoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#166CED"
                android:text="Phone No"
                android:layout_weight="1"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/tvaccemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#166CED"
                android:text="Email"
                android:layout_weight="1"/>



        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="50px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivwebsiteacc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/website" />

            <Space
                android:layout_width="70px"
                android:layout_height="20px" />

            <ImageView
                android:id="@+id/ivphoneacc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phonelogo" />

            <Space
                android:layout_width="70px"
                android:layout_height="20px" />

            <ImageView
                android:id="@+id/ivemailacc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/emaillogo" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>